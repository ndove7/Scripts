# Bargraph template in bw using ggplot2 and font settings that I like

library(ggplot2)

ggplot(data, aes(x = [blank], y = [blank], 
                           #fill = [catagories-optional]
                           )) + 
        geom_bar(alpha=0.7) + #or geom_boxplot
        scale_y_continuous(name = "[blank]") +
        scale_x_discrete(name = "[blank]") +
        ggtitle("[blank]") +
        theme_bw() + 
        # can add lines to the plot stat_summary(fun.y=median, geom="line", aes(group =1))+ #change group to catagories for mulltiple lines
        theme(plot.title = element_text(size = 14, face = "bold"), 
              text = element_text(size = 12),
              axis.title = element_text(face="bold"),
              axis.text.x=element_text(size = 11),
              legend.position = "bottom") +
        labs(fill = "catagory")+ 
        geom_hline(yintercept = 0) #adds random line
